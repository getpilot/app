{
  "extends": "../../packages/config/tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@pilot/ui/components/*": [
        "../../packages/ui/src/components/*"
      ],
      "@pilot/ui/hooks/*": [
        "../../packages/ui/src/hooks/*"
      ],
      "@pilot/ui/lib/*": [
        "../../packages/ui/src/lib/*"
      ],
      "@pilot/ui/styles/*": [
        "../../packages/ui/src/styles/*"
      ],
      "@pilot/types": [
        "../../packages/types/src/index.d.ts"
      ],
      "@pilot/types/*": [
        "../../packages/types/src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
