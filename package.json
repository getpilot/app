{
  "name": "pilot",
  "version": "0.1.0",
  "scripts": {
    "build": "turbo run build",
    "build:app": "turbo run build --filter=app",
    "build:web": "turbo run build --filter=web",
    "build:affected": "turbo run build --affected",
    "build:force": "turbo run build --force",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev",
    "dev:app": "turbo run dev --filter=app",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "check-types:app": "turbo run check-types --filter=app",
    "check-types:web": "turbo run check-types --filter=web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "turbo": "turbo"
  },
  "packageManager": "pnpm@10.26.1",
  "private": true,
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.8.11",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "packageExtensions": {
      "@hookform/resolvers@*": {
        "peerDependencies": {
          "zod": "*"
        }
      }
    },
    "overrides": {
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2",
      "require-in-the-middle": "^8.0.1",
      "import-in-the-middle": "^2.0.6"
    }
  }
}
